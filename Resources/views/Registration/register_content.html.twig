{% form_theme registrationForm theme %}


{% if app.session.hasFlash('registrationMessage') %}
    <div style="background: #ffffcc; padding: 10px; width: 400px; margin: 10px auto; text-align: center;">
        {{ app.session.getFlash('registrationMessage') }}
    </div>
{% endif %}

</div>

<div class="user-box">

        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(registrationForm) }} method="POST" class="fos_user_registration_register">
            {{ form_widget(registrationForm) }}
            <input class="button" type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />
            <br/>
        </form>

</div>
<div style="width: 100%; text-align: center; font-size: 14px">
    <a href="{{ path("fos_user_security_login") }}">Login</a> |
    <a href="{{ path("fos_user_resetting_request") }}">Forgot your password?</a>
</div>            
